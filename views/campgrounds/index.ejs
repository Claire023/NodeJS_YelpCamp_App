<% include ../partials/header%>

	<div class="container">

		<header class="jumbotron">
			<h1>Welcome to Campgrounds World</h1>
			<p>View and add wordlwide campgrounds</p>
			<p>
				<a class="btn btn-success btn-lg" href="/campgrounds/new">Add a new campground</a>
			</p>
		</header>
		
		
	<div class="row">
		<div class="col-lg-12">
			<h3>
				Most Popular Campgrounds
			</h3>
		</div>
	</div>
		
		
	<div class="row">
		<% campgrounds.forEach(function(camp){ %>
			<div class="col-6 col-md-4 col-sm-12">
			<img src="<%= camp.image %>" height="350" width="350">
				<h4 class="text-center">
		<%=camp.name %>
				</h4>
			</div>
			<p>
			<a href="/campgrounds/<%=camp._id%>" class="btn btn-primary">More info</a>
		</p>


			<%});%>
	</div>
		
		
	
	</div>

<% include ../partials/footer%>
